{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "quote",
    "title": "A quote node",
    "description": "Defines a quote node",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "type",
        "content"
    ],
    "properties": {
        "type": {
            "description": "The type of the node",
            "type": "string",
            "pattern": "quote"
        },
        "content": {
            "description": "The content of the node",
            "$ref": "/nodes/text"
        }
    }
}