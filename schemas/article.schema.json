{
    "$id": "ason.article",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$defs": {
        "string": {
            "title": "String",
            "description": "Defines a simple string encapsulator element",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "type",
                "content"
            ],
            "properties": {
                "type": {
                    "description": "The type of the element",
                    "type": "string",
                    "pattern": "string"
                },
                "emphasis": {
                    "description": "The emphasis of the element",
                    "oneOf": [
                        {
                            "type": "null"
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "bold",
                                    "italic",
                                    "underline",
                                    "code"
                                ]
                            }
                        }
                    ]
                },
                "content": {
                    "description": "The content of the element",
                    "type": "string"
                }
            }
        },
        "code": {
            "title": "Code",
            "description": "Defines a code encapsulator element",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "type",
                "size",
                "syntax",
                "content"
            ],
            "properties": {
                "type": {
                    "description": "The type of the element",
                    "type": "string",
                    "pattern": "code"
                },
                "size": {
                    "description": "The size of the element",
                    "type": "string",
                    "pattern": "(word|block)"
                },
                "syntax": {
                    "description": "The language for syntax highlighting",
                    "type": "string"
                },
                "content": {
                    "description": "The content of the element",
                    "$ref": "#/$defs/string"
                }
            }
        },
        "link": {
            "title": "Link",
            "description": "Defines a link encapsulator element",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "type",
                "uri",
                "content"
            ],
            "properties": {
                "type": {
                    "description": "The type of the element",
                    "type": "string",
                    "pattern": "link"
                },
                "uri": {
                    "description": "The URI of the link",
                    "type": "string"
                },
                "content": {
                    "description": "The content of the element",
                    "anyOf": [
                        {
                            "$ref": "#/$defs/string"
                        }
                    ]
                }
            }
        },
        "paragraph": {
            "title": "Paragraph",
            "description": "Defines a paragraph encapsulator element",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "type",
                "content"
            ],
            "properties": {
                "type": {
                    "description": "The type of the element",
                    "type": "string",
                    "pattern": "paragraph"
                },
                "content": {
                    "description": "The content of the element",
                    "anyOf": [
                        {
                            "$ref": "#/$defs/string"
                        },
                        {
                            "$ref": "#/$defs/link"
                        },
                        {
                            "$ref": "#/$defs/paragraph"
                        },
                        {
                            "$ref": "#/$defs/code"
                        },
                        {
                            "type": "array",
                            "items": {
                                "anyOf": [
                                    {
                                        "$ref": "#/$defs/string"
                                    },
                                    {
                                        "$ref": "#/$defs/link"
                                    },
                                    {
                                        "$ref": "#/$defs/paragraph"
                                    },
                                    {
                                        "$ref": "#/$defs/code"
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        },
        "heading": {
            "title": "Heading",
            "description": "Defines a heading encapsulator element",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "type",
                "level",
                "content"
            ],
            "properties": {
                "type": {
                    "description": "The type of the element",
                    "type": "string",
                    "pattern": "heading"
                },
                "level": {
                    "description": "The level of the heading (1-6)",
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 6
                },
                "content": {
                    "description": "The content of the element",
                    "anyOf": [
                        {
                            "$ref": "#/$defs/string"
                        },
                        {
                            "$ref": "#/$defs/paragraph"
                        }
                    ]
                }
            }
        },
        "lineBreak": {
            "title": "Line-break",
            "description": "Defines a line-break element",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "type"
            ],
            "properties": {
                "type": {
                    "description": "The type of the element",
                    "type": "string",
                    "pattern": "lineBreak"
                }
            }
        },
        "quote": {
            "title": "Quote",
            "description": "Defines a quote encapsulator element",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "type",
                "content"
            ],
            "properties": {
                "type": {
                    "description": "The type of the element",
                    "type": "string",
                    "pattern": "quote"
                },
                "content": {
                    "description": "The content of the element",
                    "anyOf": [
                        {
                            "$ref": "#/$defs/string"
                        },
                        {
                            "$ref": "#/$defs/paragraph"
                        },
                        {
                            "type": "array",
                            "items": {
                                "anyOf": [
                                    {
                                        "$ref": "#/$defs/string"
                                    },
                                    {
                                        "$ref": "#/$defs/paragraph"
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        },
        "list": {
            "title": "List",
            "description": "Defines a list encapsulator element",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "type",
                "order",
                "content"
            ],
            "properties": {
                "type": {
                    "description": "The type of the element",
                    "type": "string",
                    "pattern": "list"
                },
                "order": {
                    "description": "The type of the element",
                    "type": "string",
                    "enum": [
                        "ordered",
                        "unordered"
                    ]
                },
                "content": {
                    "description": "The content of the element",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "index",
                            "content"
                        ],
                        "properties": {
                            "index": {
                                "description": "The index of the element",
                                "type": "integer"
                            },
                            "content": {
                                "description": "The content of the element",
                                "anyOf": [
                                    {
                                        "$ref": "#/$defs/string"
                                    },
                                    {
                                        "$ref": "#/$defs/paragraph"
                                    },
                                    {
                                        "$ref": "#/$defs/link"
                                    },
                                    {
                                        "$ref": "#/$defs/list"
                                    }
                                ]
                            }
                        }
                    }
                }
            }
        },
        "table": {
            "title": "Table",
            "description": "Defines a table encapsulator element",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "type",
                "content"
            ],
            "properties": {
                "type": {
                    "description": "The type of the element",
                    "type": "string",
                    "pattern": "list"
                },
                "content": {
                    "description": "The content of the element",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "index",
                            "content"
                        ],
                        "properties": {
                            "index": {
                                "description": "The index of the element",
                                "type": "integer"
                            },
                            "content": {
                                "description": "The content of the element",
                                "type": "array",
                                "items": {
                                    "type": "array",
                                    "items": {
                                        "anyOf": [
                                            {
                                                "$ref": "#/$defs/string"
                                            },
                                            {
                                                "$ref": "#/$defs/paragraph"
                                            },
                                            {
                                                "$ref": "#/$defs/link"
                                            },
                                            {
                                                "$ref": "#/$defs/code"
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "section": {
            "title": "Section",
            "description": "Defines a section encapsulator element",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "type",
                "heading",
                "content"
            ],
            "properties": {
                "type": {
                    "description": "The type of the element",
                    "type": "string",
                    "pattern": "section"
                },
                "heading": {
                    "description": "The heading of the section",
                    "oneOf": [
                        {
                            "type": "null"
                        },
                        {
                            "$ref": "#/$defs/heading"
                        }
                    ]
                },
                "content": {
                    "description": "The content of the element",
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "#/$defs/string"
                            },
                            {
                                "$ref": "#/$defs/code"
                            },
                            {
                                "$ref": "#/$defs/link"
                            },
                            {
                                "$ref": "#/$defs/paragraph"
                            },
                            {
                                "$ref": "#/$defs/lineBreak"
                            },
                            {
                                "$ref": "#/$defs/quote"
                            },
                            {
                                "$ref": "#/$defs/list"
                            },
                            {
                                "$ref": "#/$defs/table"
                            }
                        ]
                    }
                }
            }
        }
    },
    "title": "Article",
    "description": "Defines an article content",
    "type": "object",
    "additionalProperties": true,
    "required": [
        "id"
    ],
    "properties": {
        "id": {
            "description": "The id of the article",
            "type": "string"
        },
        "title": {
            "description": "The title of the article",
            "type": "string"
        },
        "content": {
            "title": "Content",
            "description": "Defines an article content",
            "type": "array",
            "items": {
                "$ref": "#/$defs/section"
            }
        },
        "metadata": {
            "title": "Metadata",
            "description": "Defines an article metadata",
            "type": "object",
            "additionalProperties": false,
            "required": [],
            "properties": {
                "authors": {
                    "description": "The authors of the article",
                    "type": "array",
                    "items": {
                        "title": "Author",
                        "description": "Defines an author object",
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "id",
                            "name"
                        ],
                        "properties": {
                            "id": {
                                "description": "The id of the author",
                                "type": "string"
                            },
                            "name": {
                                "description": "The name of the author",
                                "type": "string"
                            }
                        }
                    }
                },
                "createdOn": {
                    "description": "The date the article was created",
                    "type": "string"
                },
                "tags": {
                    "description": "The tags of the article",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    }
}