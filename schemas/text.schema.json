{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Text",
    "description": "Defines a simple text encapsulator element",
    "type": "object",
    "required": [
        "type",
        "content"
    ],
    "properties": {
        "type": {
            "description": "The type of the element",
            "type": "string",
            "pattern": "text"
        },
        "content": {
            "description": "The content of the element",
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "$ref": "./bold.schema.json"
                },
                {
                    "$ref": "./italic.schema.json"
                },
                {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "type": "string"
                            },
                            {
                                "$ref": "./bold.schema.json"
                            },
                            {
                                "$ref": "./italic.schema.json"
                            }
                        ]
                    }
                }
            ]
        }
    }
}